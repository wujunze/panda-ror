<p id="notice"><%= notice %></p>

<h1>Pandas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pandas.each do |panda| %>
      <tr>
        <td><%= panda.name %></td>
        <td><%= panda.city %></td>
        <td><%= link_to 'Show', panda %></td>
        <td><%= link_to 'Edit', edit_panda_path(panda) %></td>
        <td><%= link_to 'Destroy', panda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

